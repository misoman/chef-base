{
  "name": "development",
  "description": "The Web Application Developer's vagrant Chef environment",
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "override_attributes": {
    "authorization": {
      "sudo": {
      "groups": ["admin"],
      "users": ["vagrant"],
      "passwordless": "true"
      }
    },
    "monit_enabled": true,
    "monit": {
      "default_monitrc_configs": ["ssh"],
      "alert_ignore_events": ["action", "instance", "pid", "ppid"],
      "alert_email": "alert@example.com",
	    "mail": {
	    	"hostname": "localhost",
        "port": "587",
        "security": "TLSV1",
        "from": "monit@example.com",
		    "username": "alert@example.com",
		    "password": "alert_password"
	    }
    },
    "chefserver":{
      "ip": "127.0.0.1",
      "hostname": "chefserver.examplechefserver.com"
    },
    "dbhosts": {
      "db_ip": ["127.0.0.1"],
      "webapp_ip": ["127.0.0.1"]
    },
    "haproxy": {
      "enable_ssl": true,
      "incoming_port": 82,
      "members": [{
        "hostname": "0varnish.examplewebsite.com",
        "ipaddress": "192.168.33.10",
        "port": 80,
        "ssl_port": 80
      }]
    },
    "keepalived": {
      "instances": {
        "vi_1": {
          "ip_addresses": "192.168.33.11",
          "interface": "eth1"
        }
      }
    },
    "varnish": {
      "listen_port": "80",
      "backend_port": "81",
      "listen_address": "192.168.33.10"
    },
    "w_varnish": {
      "node_ipaddress_list": ["192.168.33.10"],
      "acl_purge": ["\"192.168.33.10\"/32"],
      "geoip":{
        "enabled":true,
        "s3": {
          "enabled": false
        }
      },
      "multi_cookie_enabled": true
    },
    "apache": {
      "listen": ["*:81", "*:443"],
      "default_site_port": "81"
    },
    "w_apache": {
      "xdebug_enabled": true,
      "config_test_enabled": true,
      "deploy":{
        "enabled": false
      },
      "phpmyadmin": {
        "enabled": false
      },
      "ssl_enabled": true
    },
    "w_memcached": {
      "ips": ["127.0.0.1"]
    },
    "percona": {
      "cluster": {
        "wsrep_cluster_name":"vagrant_cluster",
        "cluster_ips": ["127.0.0.1"]
      },
      "server": {
        "key_buffer": "64M",
        "query_cache_size": "64M",
        "innodb_buffer_pool_size": "64M",
        "bind_address": "127.0.0.1"
      },
      "skip_passwords": false
    },
    "w_percona": {
      "xinetd_enabled": false
    }
  }
}
